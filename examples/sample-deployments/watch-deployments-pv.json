{
    "apiVersion": "v1",
    "kind": "PersistentVolume",
    "metadata": {
        "name": "watchprimary-pgdata",
        "labels": {
            "name": "watchprimary-pgdata"
        }
    },
    "spec": {
        "capacity": {
            "storage": "$CCP_STORAGE_CAPACITY"
        },
        "accessModes": ["$CCP_STORAGE_MODE"],
        "hostPath": {
            "path": "$CCP_STORAGE_PATH"
        },
        "persistentVolumeReclaimPolicy": "Retain"
    }
}

